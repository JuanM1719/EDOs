import numpy as np
import matplotlib.pyplot as plt

# Definir el campo de velocidades
def campo_velocidad(x, y):
    u = -y  # Componente en x de la velocidad
    v = x   # Componente en y de la velocidad
    return u, v

# Crear una cuadr√≠cula de puntos (x, y)
x_vals = np.linspace(-5, 5, 20)
y_vals = np.linspace(-5, 5, 20)
X, Y = np.meshgrid(x_vals, y_vals)

# Calcular las componentes del campo de velocidades
U, V = campo_velocidad(X, Y)

# Graficar el campo de velocidades
plt.figure(figsize=(8, 6))
plt.quiver(X, Y, U, V, color='b')
plt.title('Campo de velocidades rotacional')
plt.xlabel('x')
plt.ylabel('y')
plt.grid(True)
plt.show()
